<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <!--edit-->
          <% if (action != undefined && action == "edit" ) { %>
          <div class="alert alert-success">
            Updated category <%= categoryId %>
          </div>
          <% } %>

          <!--create-->
          <% if (action != undefined && action == "create" ) { %>
          <div class="alert alert-success">Added category</div>
          <% } %>

          <!--delete-->
          <% if (action != undefined && action == "delete" ) { %>
          <div class="alert alert-danger">Deleted category</div>
          <% } %>

          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 50px">Id</th>
                <th>name</th>
                <th style="width: 130px"></th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach(category => { %>
              <tr>
                <td><%= category.categoryId %></td>
                <td><%= category.name %></td>
                <td>
                  <!--   index.jsde /admin oldugu icin /admin koyuyoruz adin.js routedaki url'e ek olarak-->

                  <a
                    class="btn btn-sm btn-primary"
                    href="/admin/categories/<%= category.categoryId %>"
                  >
                    edit</a
                  >
                  <a
                    class="btn btn-sm btn-danger"
                    href="/admin/category/delete/<%= category.categoryId %>"
                  >
                    delete</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
