<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <!--ejsinc-->
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <!-- <% for( let i = 0; i < categories.length; i++ ) { %>
            <a href="" class="list-group-item list-group-action">
              <%= categories[i] %></a
            >
            <% } %> -->

            <% categories.forEach(function (category) { %>
            <a href="" class="list-group-item list-group-action">
              <%= category %></a
            >
            <% }) %>
          </div>
        </div>
        <div class="col-md-9">
          <h1 class="h3 mb-3"><%= title %></h1>

          <% blogs.forEach(blog => { %> <% if (blog.isApproved) { %>
          <!-- ejseach-->
          <div class="card mb-3">
            <div class="row">
              <div class="col-md-4">
                <!-- ejsout-->
                <img
                  src="/static/images/<%= blog.img %>"
                  class="img-fluid"
                  alt=""
                />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <!-- ejsout-->
                  <p class="card-text"><%= blog.description %></p>
                  <!-- ejsout-->
                </div>
              </div>
            </div>
          </div>
          <% } %> <% }) %>

          <!--pagination-->

          <% if (blogs.filter(b => b.isApproved).length>2) { %> <%-
          include('../partials/pagination') %> <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
